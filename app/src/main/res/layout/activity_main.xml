<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:id="@+id/search"
            android:textColor="@color/orange"
            android:textColorHint="@color/orange"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:backgroundTint="@color/orange"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/a"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="All"
                    android:textColor="@color/white"
                    android:onClick="openGraphA"
                    android:layout_margin="1dp"
                    />

                <TextView
                    android:id="@+id/l"
                    android:onClick="openGraphL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/lu"
                    android:onClick="openGraphLu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="LU"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textColor="@color/white"
                    android:id="@+id/s"
                    android:gravity="center"
                    android:onClick="openGraphS"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/sc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SC"
                    android:textColor="@color/white"
                    android:onClick="openGraphSc"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_timelapse_24"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_long"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Long"
            android:textColor="@color/gray"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_long_u"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Long-Unwinding"
            android:textColor="@color/gray"
            /><ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_short"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Short"
            android:textColor="@color/gray"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_short_c"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Short-covering"
            android:textColor="@color/gray"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/black"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview" />

</LinearLayout>